LIBRARY IEEE;
USE IEEE.STD_LOGIC_1164.ALL;

ENTITY SEMAFORO IS 
PORT(
		CLK_IN : IN STD_LOGIC; -- CLOCK 50MHz
		
		);
END SEMAFORO;

ARCHITECTURE LOGIC OF SEMAFORO IS

CONSTANT LEDS_R : STD_LOGIC_VECTOR( 15 DOWNTO 0): = "1111111111111111";
CONSTANT LEDS_G : STD_LOGIC_VECTOR( 5 DOWNTO 0):  = "111111";;

CONSTANT LED_R  : STD_LOGIC;
CONSTANT LED_G  : STD_LOGIC;

CONSTANT TEMPO  : INTEGER : = 10;

BEGIN

PROCESS(CLK_IN)

	VARIABLE CONTADOR_CLK      : INTEGER := 1;
	VARIABLE CONTADOR_SEGUNDOS : INTEGER := 1;
	

BEGIN

	IF( FALLING_EDGE(CLK_IN) ) THEN

		CONTADOR_CLK := CONTADOR_CLK + 1;
		

	END IF;

END PROCESS;



END LOGIC;
